{
  "name": "relevance",
  "private": true,
  "workspaces": [
    "*"
  ],
  "scripts": {
    "dev:backend": "npm --workspace=@relevance/backend run start:dev",
    "dev:frontend": "npm --workspace=@relevance/frontend run dev",
    "dev:shared": "npm --workspace=@relevance/shared run dev",
    "dev:api-gen": "npm --workspace=@relevance run api:watch",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:shared\" \"npm run dev:api-gen\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
